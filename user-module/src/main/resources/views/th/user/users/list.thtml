<html xmlns:th="http://www.thymeleaf.org">
<head>
	<title th:fragment="title">User overview</title>
</head>
<body th:fragment="content">
<a th:href="@{${@adminWeb.path('/users/create')}}">create a new user</a>
<table class="table table-striped table-hover">
	<thead>
	<tr>
		<th>#</th>
		<th>Username</th>
		<th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Display Name</th>
        <th>Email Confirmed</th>
        <th>Deleted</th>
        <th></th>
	</tr>
	</thead>
	<tbody>
	<tr th:each="user,userStats:${users}">
		<td th:text="${userStats.count}"></td>
		<td th:text="${user.username}"></td>
		<td th:text="${user.email}"></td>
        <td th:text="${user.firstName}"></td>
        <td th:text="${user.lastName}"></td>
        <td th:text="${user.displayName}"></td>
        <td th:text="${user.emailConfirmed}"></td>
        <td th:text="${user.deleted}"></td>
        <td><a th:href="@{${@adminWeb.path('/users/') + user.id}}">edit</a></td>
	</tr>
	</tbody>
</table>
</body>
</html>