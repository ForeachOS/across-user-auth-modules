<html xmlns:th="http://www.thymeleaf.org" class="no-js mq"
      xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>


<body>
<div th:fragment="content">

	<div class="l-page-login">
		<div class="l-page-login__wrapper">
			<div class="l-login-section">
				<div class="l-form-box">
					<div class="l-form-box-inner">
						<div class="l-grid">
							<div class="l-grid__row">
								<div class="l-grid__item one-whole desktop-one-half">
									<div class="l-form-box__right">

										<!-- START FORM  FORGOT PASSWORD-->
										<div class="m-form-password">
											<div class="m-form-container">
												<form class="password-form js-forgot-password-form" method="POST">
													<div th:if="${#fields.hasErrors('email')}">
														<th:block th:text="#{errorFeedback}"/>
													</div>
													<div class="m-form-group">
														<label class="h-sr-only" for="email" th:text="#{UserModule.web.changePassword.usernameOrEmail}">
															Email
														</label>
														<input name="email" id="email" type="email" class="form-control" required="true"
														       th:placeholder="#{UserModule.web.changePassword.usernameOrEmail.placeholder}" />
													</div>

													<div class="l-grid l-grid--gutter">
														<div class="l-grid__row">
															<div class="l-grid__item one-whole desktop-one-half">
																<input class="m-button m-button--100 m-button--primary " type="submit"
																th:value="#{UserModule.web.changePassword.submit}"
																/>
															</div>
														</div>
													</div>
												</form>
											</div><!--form-container-->
										</div>
										<!--v END FORM PASSWORD-->
									</div>
								</div>
							</div>
						</div>
					</div><!--//form-box-inner-->
				</div><!--//form-box-->
			</div>
		</div>
	</div>
</div>
</body>
</html>
