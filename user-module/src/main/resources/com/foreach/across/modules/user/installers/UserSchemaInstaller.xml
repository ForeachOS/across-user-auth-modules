		<comment>Set character set for mysql</comment>
		<sql>
			ALTER TABLE ${table.permission_group}
			MODIFY name VARCHAR(255)
			CHARACTER SET utf8
			COLLATE utf8_unicode_ci
		</sql>
	</changeSet>

