<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
	<title th:text="'Login: ' + ${@adminWeb.title}">Login page</title>
</head>
<body>
<div class="container" th:fragment="content">
	<div class="text-right" th:unless="${localeOptions.empty}">
		<span th:each="option : ${localeOptions}">
			<a th:href="@{${@adminWeb.path('/')}(locale=${option.locale})}">
				<strong th:remove="${option.selected} ? none : tag" th:text="${option.label}">language</strong>
			</a>
		</span>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<form name="loginForm" th:action="@{${@adminWeb.path('/login')}}" method="post" role="form" class="form-signin center-block">
				<div class="text-center page-header">
					<h2 th:text="${@adminWeb.title}">Unizo</h2>
				</div>
				<fieldset>
					<div th:if="${param.error}" class="alert alert-danger">
						Invalid username and password.
					</div>
					<div th:if="${param.logout}" class="alert alert-success">
						You have been signed out.
					</div>
					<div th:unless="${param.error != null or param.logout != null}" class="alert text-center">
						Please sign in.
					</div>
					<label for="username" class="sr-only">Username</label>
					<input type="text" id="username" name="username" class="form-control" placeholder="Username"
					       required="required" autofocus="autofocus"/>
					<label for="password" class="sr-only">Password</label>
					<input type="password" id="password" name="password" class="form-control" placeholder="Password"/>

					<div th:if="${@adminWeb.settings.rememberMeEnabled}" class="checkbox">
						<label for="remember-me">
							<input type="checkbox" id="remember-me" name="remember-me"/> Remember me
						</label>
					</div>
					<button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>
				</fieldset>
			</form>
		</div>
	</div>
</div>
</body>
</html>