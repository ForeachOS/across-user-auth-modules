<html xmlns:th="http://www.thymeleaf.org">
<head>
	<title th:fragment="title">List entities overview</title>
</head>
<body th:fragment="content">

<h4 class="page-header" th:if="${pageTitle != null}" th:text="${pageTitle}">
	Page title
</h4>

<div class="tabbable filled"
     th:with="hasMenu = ${entityMenu != null and entityMenu.hasItems()}"
     th:remove="${hasMenu} ? none: tag">

	<ul class="nav nav-tabs" th:if="${hasMenu}">
		<li th:each="tab : ${entityMenu.items}" th:classappend="${tab.selected}? 'active'">
			<a th:href="@{${tab.url}}" th:text="${tab.title}">tab menu</a>
		</li>
	</ul>

	<div class="tab-content" th:remove="${hasMenu} ? none: tag">
		<div class="tab-pane active" th:remove="${hasMenu} ? none: tag">
			<div th:replace="th/entity/formFields :: form_fields(${properties})"/>
		</div>
	</div>
</div>
</body>
</html>